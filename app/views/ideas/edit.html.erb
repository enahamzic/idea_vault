<% content_for :title, "Editing idea" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to @idea, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to idea
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Idea</h1>
      <p class="mt-2 text-gray-600">Update and refine your idea</p>
    </div>

    <%= render "form", idea: @idea %>
  </div>
</div>
